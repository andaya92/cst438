<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">Log in</h1>
        
        <%= form_for @user, :url => "/session" do |f| %>
          <% if @user.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% @user.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end  %>
                </ul>
            </div>
           <% end %>
           
           <div class="row">
               <div class="col-6 self-align-start">
                    <%= f.label :email %><br/>
               </div>
               <div class="col-6 self-align-end">
                    <%= f.text_field :email , class: "form-control" %>
               </div>
           </div>
           <div class="row">
               <div class="col-6 self-align-start">
                    <%= f.label :password %><br/>
               </div>
               <div class="col-6 self-align-end">
                    <%= f.password_field :password , class: "form-control" %>
               </div>
           </div>
           <div class="actions text-center"><%= f.submit "Login" , class: "form-control"%></div>
        <% end %>        
    </div>
</div>
