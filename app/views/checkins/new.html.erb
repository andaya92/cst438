<div class="row">
    <div class="col-6 offset-3">
        <h1 class="text-center">Check in</h1>
        <% if @checkin_error %>
            <h2><%=@checkin_error%></h2>
        <%end%>
        <%= form_for @checkin do |f| %>
          <% if @checkin.errors.any? %>
            <div class="error_messages">
                <h2>Form is invalid</h2>
                <ul>
                    <% @checkin.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end  %>
                </ul>
            </div>
           <% end %>
           

           <div class="row">
               <div class="col-6 self-align-start">
                    <%= f.label :user_id %><br/>
               </div>
               <div class="col-6 self-align-end">
                    <%= f.select :user_id , options_for_select(@users.map{|u| [u.email, u.id]}), {}, {:class => "form-control"} %>
               </div>
           </div>
           
          
           <div class="actions text-center"><%= f.submit "Check in" , class: "form-control"%></div>
        <% end %>        
    </div>
</div>
